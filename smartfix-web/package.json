{
  "name": "civicsense",
  "version": "1.0.0",
  "description": "CivicSense - Civic Issue Reporting System",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm start",
    "frontend:dev": "cd frontend && npm run dev",
    "admin:dev": "cd admin && npm run dev",
    "build": "npm run build:frontend && npm run build:admin && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:admin": "cd admin && npm run build",
    "build:backend": "cd backend && npm install",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../admin && npm install",
    "seed": "cd backend && npm run seed",
    "test": "cd backend && npm test"
  },
  "keywords": [
    "civic",
    "issues",
    "reporting",
    "community",
    "gamification"
  ],
  "author": "CivicSense Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": "18.x"
  }
}
